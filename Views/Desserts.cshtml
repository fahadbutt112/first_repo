@model IEnumerable<MvcRecipeApp.Models.Recipe>

@{
    ViewData["Title"] = "Desserts";
    int serialNumber = 1;
}

<h2>Desserts</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Image</th>
            <th>Title</th>
            <th>Ingredients</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@serialNumber</td>
            <td>
                @if (!string.IsNullOrEmpty(item.Picture))
                {
                    <img src="@item.Picture" alt="Recipe Image" width="100" height="100" style="object-fit:cover; border-radius: 5px;" />
                }
                else
                {
                    <span>No Image</span>
                }
            </td>
            <td>@item.Title</td>
            <td>@item.Ingredients</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        serialNumber++;
    }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to All Recipes</a>
